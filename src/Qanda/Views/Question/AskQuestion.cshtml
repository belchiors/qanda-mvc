@model Qanda.ViewModels.AskQuestionViewModel

@{
  ViewData["Title"] = "Ask Question";
}

<h5 class="">Ask a new question</h6>
<form asp-controller="Question" asp-action="AskQuestion" method="post">
  <div class="form-group mb-3">
    <label class="form-label">Title</label>
    <input class="form-control" type="text" placeholder="A clear, explict and concice title" asp-for="Title">
  </div>
  <div class="form-group mb-3">
    <label class="form-label">Description</label>
    <textarea class="form-control md-editor" placeholder="What do you need help with?" asp-for="Body"></textarea>
  </div>
  <button type="submit" class="btn btn-primary">Post Your Question</button>
</form>