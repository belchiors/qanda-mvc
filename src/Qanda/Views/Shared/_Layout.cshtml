<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Qanda</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/lib/simplemde/dist/simplemde.min.css" />
    <link href="https://fonts.googleapis.com/css2?family=Source+Sans+Pro&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>

<body>
    <nav class="navbar navbar-light bg-white mb-3">
        <div class="container">
            <a class="navbar-brand me-2" href="/">Qanda</a>
            <div class="d-flex">
                <partial name="_LoginPartial" />
            </div>
        </div>
    </nav>
    <main class="d-flex flex-column min-vh-100">
        <div class="container">
            @RenderBody()
        </div>
    </main>
    <footer class="footer mt-auto text-align-center py-3">
        <div class="container">
            &copy; 2021 - Qanda - <a asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/simplemde/dist/simplemde.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
