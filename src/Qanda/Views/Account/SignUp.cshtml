@model Qanda.ViewModels.SignUpViewModel
@{
    ViewData["Title"] = "Sign Up";
}

<div class="text-align-center form-container mx-auto">
    <h2 class="">Sign Up</h2>
    <p>Find the best answer to your technical questions, help others answer theirs.</p>
</div>
<div class="form-container card mx-auto mb-2 p-24 rounded-3">
    <div class="alert alert-danger validation-summary" role="alert" asp-validation-summary="All"></div>
    <form asp-controller="Account" asp-action="SignUp" method="post">
        <div class="form-group mb-3">
            <label class="form-label">Username</label>
            <input class="form-control" type="text" asp-for="Username" required>
        </div>
        <div class="form-group mb-3">
            <label class="form-label">Email</label>
            <input class="form-control" type="email" asp-for="Email" required>
        </div>
        <div class="form-group mb-3">
            <label class="form-label">Password</label>
            <input type="password" class="form-control" asp-for="Password" required>
        </div>
        <div class="form-group mb-3">
            <label class="form-label">Confirm Password</label>
            <input type="password" class="form-control" asp-for="ConfirmPassword" required>
        </div>
        <button type="submit" class="btn btn-primary form-control">Sign Up</button>
    </form>
</div>
<div class="text-align-center">Already have an account? <a asp-controller="Account" asp-action="SignIn">Sign In</a></div>